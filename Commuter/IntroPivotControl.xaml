<UserControl x:Class="Commuter.IntroPivotControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Microsoft_Maps_MapControl="clr-namespace:Microsoft.Phone.Controls.Maps;assembly=Microsoft.Phone.Controls.Maps"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    Background="{StaticResource PhoneBackgroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
    <StackPanel>
        <TextBlock Padding="10" FontSize="34" Text="Swipe to view your commutes" TextWrapping="Wrap"/>
        <TextBlock Padding="10" FontSize="30" Text="Get route recommendations" TextWrapping="Wrap"/>
        <TextBlock Padding="10" FontSize="26" Text="Reduce your daily commute" TextWrapping="Wrap"/>
        <TextBlock Padding="10" FontSize="22" Text="Avoid unpredictable traffic" TextWrapping="Wrap"/>
        <TextBlock Padding="10" FontSize="16" Text="Learn about alternative routes" TextWrapping="Wrap"/>
    </StackPanel>
</UserControl>
